{
  "name": "dotnet-project-toolkit",
  "displayName": ".NET Project Toolkit",
  "description": "All-in-one project toolkit for .NET developers - deployment, watch, and debug management",
  "version": "0.1.0",
  "publisher": "yourpublisher",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourpublisher/dotnet-project-toolkit"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "dotnet",
    "aspnet",
    "csharp",
    "deployment",
    "iis",
    "msdeploy",
    "debug",
    "watch"
  ],
  "activationEvents": [
    "workspaceContains:**/*.pubxml",
    "workspaceContains:**/*.csproj"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnet-project-toolkit.deployToUatApi",
        "title": ".NET Toolkit: Deploy API to UAT",
        "icon": "$(rocket)"
      },
      {
        "command": "dotnet-project-toolkit.deployToUatClient",
        "title": ".NET Toolkit: Deploy Client to UAT",
        "icon": "$(rocket)"
      },
      {
        "command": "dotnet-project-toolkit.deployToProdApi",
        "title": ".NET Toolkit: Deploy API to Production",
        "icon": "$(warning)"
      },
      {
        "command": "dotnet-project-toolkit.deployToProdClient",
        "title": ".NET Toolkit: Deploy Client to Production",
        "icon": "$(warning)"
      },
      {
        "command": "dotnet-project-toolkit.selectProfile",
        "title": ".NET Toolkit: Select Publish Profile",
        "icon": "$(list-selection)"
      },
      {
        "command": "dotnet-project-toolkit.configureCredentials",
        "title": ".NET Toolkit: Configure Deployment Credentials",
        "icon": "$(key)"
      },
      {
        "command": "dotnet-project-toolkit.refreshProfiles",
        "title": ".NET Toolkit: Refresh Publish Profiles",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dotnet-toolkit",
          "title": ".NET Toolkit",
          "icon": "resources/icons/dotnet.svg"
        }
      ]
    },
    "views": {
      "dotnet-toolkit": [
        {
          "id": "dotnetPublish",
          "name": "Publish",
          "icon": "$(rocket)",
          "contextualTitle": "Publish Profiles"
        },
        {
          "id": "dotnetWatch",
          "name": "Watch",
          "icon": "$(eye)",
          "contextualTitle": "Watch Instances"
        },
        {
          "id": "dotnetDebug",
          "name": "Debug",
          "icon": "$(debug-alt)",
          "contextualTitle": "Debug Configurations"
        },
        {
          "id": "dotnetHistory",
          "name": "History",
          "icon": "$(history)",
          "contextualTitle": "Deployment History"
        }
      ]
    },
    "configuration": {
      "title": ".NET Project Toolkit",
      "properties": {
        "dotnetWorkspace.dotnetPath": {
          "type": "string",
          "default": "dotnet",
          "description": "Path to dotnet CLI executable"
        },
        "dotnetToolkit.deploymentTimeout": {
          "type": "number",
          "default": 300,
          "description": "Deployment timeout in seconds"
        },
        "dotnetToolkit.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show deployment notifications"
        },
        "dotnetToolkit.confirmProductionDeploy": {
          "type": "boolean",
          "default": true,
          "description": "Confirm before deploying to production"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.3"
  }
}
